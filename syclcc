usage() { echo syclcc: error: $2 >&2; exit $1; }

[ -z "$COMPUTECPP" ] && usage 2 "create and initialise a COMPUTECPP environment var"

COMPUTECPP_BASENAME=`basename "$COMPUTECPP"`
SYCLCC_FILENAME=syclcc-$COMPUTECPP_BASENAME.sh
$SYCLCC_FILENAME "$@"
exit $?

